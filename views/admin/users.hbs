{{>admin_breadcrumb breadcrumb_section="Users"}}
<h3>Users administration</h3>
<div class="row">
    <div class="col s12 l4">
        <div class="card-panel">
            <button class="btn waves-effect waves-light">
                <i class="material-icons">home</i>
            </button>
            <button class="btn waves-effect waves-light" onclick="goPrev()">
                <i class="material-icons">navigate_before</i>
            </button>
            <button class="btn waves-effect waves-light" onclick="goNext()">
                <i class="material-icons">navigate_next</i>
            </button>
        </div>
    </div>
    <div class="col s12 l8">
        <ul class="collection">
            {{#each users}}
            <a class="collection-item waves-effect" href="/users/profile?id={{this.id}}">{{this.nick}}</a>
            {{/each}}
        </ul>
    </div>
</div>
<script src="/public/js/admin_user.js"></script>