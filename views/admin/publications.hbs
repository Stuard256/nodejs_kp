{{>admin_breadcrumb breadcrumb_section="Publications"}}
<h3>Publications administration</h3>
<div class="row">
    <div class="col s12 l4">
        <div class="card-panel">
            <div class="input-field">
                <select id="filter-class" autocomplete="on">
                    <option value="pending">Pending</option>
                    <option value="published">Published</option>
                    <option value="all">All</option>
                </select>
            </div>
            <button class="btn waves-effect waves-light">
                <i class="material-icons">home</i>
            </button>
            <button class="btn waves-effect waves-light" onclick="goPrev()">
                <i class="material-icons">navigate_before</i>
            </button>
            <button class="btn waves-effect waves-light" onclick="goNext()">
                <i class="material-icons">navigate_next</i>
            </button>
        </div>
    </div>
    <div class="col s12 l8">
        <ul class="collection">
            {{#each pubs}}
            <a class="collection-item waves-effect" href="/publications?id={{this.id}}">{{this.title}}</a>
            {{/each}}
        </ul>
    </div>
</div>
<script src="/public/js/admin_pub.js"></script>