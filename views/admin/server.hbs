{{>admin_breadcrumb breadcrumb_section="Server management"}}
<h5>Server management</h5>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script src="/public/js/chart.js" type="text/javascript"></script>
<script src="/public/js/graphics.js" type="text/javascript"></script>


<div class="row">

    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">RAM usage</span>
                <p>Free: {{memory.free}} MB</p>
                <p>Total: {{memory.total}} MB</p>
                <span class="secondary-content">{{memory.avg}}%</span>
                <div class="progress">
                    <div class="determinate" style="width: {{memory.avg}}%"></div>
                </div>

            </div>
        </div>
    </div>

    <div class="col s12">
        <div class="card white darken-1">
            <div class="card-content white-text">
                <span class="card-title">Requests rate</span>
                <div>
                    <canvas id="requestChart" width="800" height="400">
                    </canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col s12">
        <div class="card white darken-1">
            <div class="card-content white-text">
                <span class="card-title">Response codes</span>
                <div>
                    <canvas id="responseChart" width="800" height="400">
                    </canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col s12">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">CPU usage</span>
                <div class="progress">
                    <div class="determinate" style="width: {{avgCpu}}%"></div>
                </div>
                <table>
                    <thead>
                    <th>Name</th>
                    <th>Speed</th>
                    <th>Usage %</th>
                    </thead>
                    <tbody>
                        {{#each cpudata}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.speed}}</td>
                            <td>
                                {{this.avg}}
                                <div class="progress">
                                    <div class="determinate" style="width: {{this.avg}}%"></div>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
